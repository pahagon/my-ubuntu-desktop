  name = pahagon
  email = paulo.ahagon@gmail.com
[github]
  user = pahagon
  email= paulo.ahagon@gmail.com
[core]
  editor = vim
	excludesfile = ~/.gitignore
[pull]
  #rebase = true
[help]
	autocorrect = 1
#[commit]
#  template = ~/,gitmessage
[credential "https://gist.github.com"]
	helper =
	helper = !/usr/bin/gh auth git-credential
[init]
	defaultBranch = main
